{
  "name": "gameengine",
  "version": "1.0.0",
  "description": "Engine for building API enabled game engines",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "func:start": "npm run --prefix api start",
    "app:start": "npm run --prefix app start",
    "func:install": "npm run --prefix api install",
    "func:build:watch": "npm run --prefix api watch",
    "app:install": "npm run --prefix app install",
    "watch:all": "npm-run-all --parallel func:start func:build:watch app:start",
    "install:all": "npm-run-all func:install app:install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cveld/gameengine.git"
  },
